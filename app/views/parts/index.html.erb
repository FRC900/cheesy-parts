<h1>Listing parts</h1>

<table>
  <tr>
    <th>Part number</th>
    <th>Project</th>
    <th>Part type</th>
    <th>Name</th>
    <th>Part</th>
    <th>Notes</th>
    <th>Status</th>
    <th>Source material</th>
    <th>Have material</th>
    <th>Quantity</th>
    <th>Cut length</th>
    <th>Priority</th>
    <th>Drawing created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.part_number %></td>
    <td><%= part.project %></td>
    <td><%= part.part_type %></td>
    <td><%= part.name %></td>
    <td><%= part.part %></td>
    <td><%= part.notes %></td>
    <td><%= part.status %></td>
    <td><%= part.source_material %></td>
    <td><%= part.have_material %></td>
    <td><%= part.quantity %></td>
    <td><%= part.cut_length %></td>
    <td><%= part.priority %></td>
    <td><%= part.drawing_created %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

