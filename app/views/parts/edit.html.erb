<h2>Edit Part</h2>
<%= form_for(@part) do |f| %>	
  <div class="field">
    <%= f.label :part_number, :class=>"label label-info" %><%= @part.full_part_number %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select((Part::STATUS_MAP).invert) %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :source_material %><br />
    <%= f.text_field :source_material %>
  </div>
  <div class="field">
    <%= f.label :have_material %><br />
    <%= f.check_box :have_material %>
  </div>
  <div class="field">
    <%= f.label :cut_length %><br />
    <%= f.text_field :cut_length %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :drawing_created %><br />
    <%= f.number_field :drawing_created %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, options_for_select(Part::PRIORITY_MAP) %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class=>"btn btn-primary btn-medium" %>
  </div>
<% end %>