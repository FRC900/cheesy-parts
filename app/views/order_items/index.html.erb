<h1>Listing order_items</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Order</th>
    <th>Quantity</th>
    <th>Part number</th>
    <th>Description</th>
    <th>Unit cost</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.project %></td>
    <td><%= order_item.order %></td>
    <td><%= order_item.quantity %></td>
    <td><%= order_item.part_number %></td>
    <td><%= order_item.description %></td>
    <td><%= order_item.unit_cost %></td>
    <td><%= order_item.notes %></td>
    <td><%= link_to 'Show', order_item %></td>
    <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
    <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

